{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "description": "Chrome extension built with React, TypeScript, and Tailwind CSS",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "React Chrome Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/floatpanel/index.html",
        "src/float-panel-subtitles/index.html",
        "src/index.css",
        "floatpanel.js",
        "float-panel-subtitles.js",
        "index.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
