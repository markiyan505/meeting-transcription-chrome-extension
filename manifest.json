{
  "manifest_version": 3,
  "name": "Meeting Transcription",
  "version": "1.0.0",
  "description": "Extension to save transcripts of meetings",
  "permissions": ["activeTab", "storage", "downloads", "scripting", "alarms"],
  "host_permissions": [
    "*://meet.google.com/*",
    "*://teams.microsoft.com/*",
    "*://teams.live.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "src/entries/popup/index.html",
    "default_title": "Meeting Transcription"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*",
        "http://localhost:3000/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*",
        "http://localhost:3000/*"
      ],
      "js": ["auth-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/entries/floatpanel/index.html",
        "src/entries/subtitles-panel/index.html",
        "index.css",
        "panel.css",
        "notification.css",
        "floatpanel.js",
        "subtitles-panel.js"
      ],
      "matches": [
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*",
        "http://localhost:3000/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
