{
  "manifest_version": 3,
  "name": "Meeting Transcription",
  "version": "1.0.0",
  "description": "Extension to save transcripts of meetings",
  "permissions": ["activeTab", "storage", "scripting", "downloads"],
  "action": {
    "default_popup": "src/entries/popup/index.html",
    "default_title": "Meeting Transcription"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/entries/floatpanel/index.html",
        "src/entries/subtitles-panel/index.html",
        "src/index.css",
        "floatpanel.js",
        "subtitles-panel.js",
        "index.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
